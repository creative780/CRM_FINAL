    {
      "name": "Conversation Management",
      "item": [
        {
          "name": "List Conversations",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/chat/conversations/",
              "host": ["{{base_url}}"],
              "path": ["chat", "conversations", ""]
            }
          },
          "response": [
