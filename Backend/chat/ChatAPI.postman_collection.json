        {
          "name": "Create Conversation",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"New Chat Session\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/chat/conversations/",
              "host": ["{{base_url}}"],
              "path": ["chat", "conversations", ""]
            }
          }
        },
        {
          "name": "Get Conversation Details",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/chat/conversations/{{conversation_id}}/",
              "host": ["{{base_url}}"],
              "path": ["chat", "conversations", "{{conversation_id}}", ""]
            }
          }
        },
        {
          "name": "Get Conversation Messages",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/chat/conversations/{{conversation_id}}/messages/?limit=50&offset=0",
              "host": ["{{base_url}}"],
              "path": ["chat", "conversations", "{{conversation_id}}", "messages", ""],
              "query": [
                {
                  "key": "limit",
                  "value": "50"
                },
                {
                  "key": "offset",
                  "value": "0"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Message Actions",
      "item": [
        {
          "name": "Mark Message as Read",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{base_url}}/chat/messages/{{message_id}}/read/",
              "host": ["{{base_url}}"],
              "path": ["chat", "messages", "{{message_id}}", "read", ""]
            }
          }
        },
        {
          "name": "Upload Attachment",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/chat/upload/",
              "host": ["{{base_url}}"],
              "path": ["chat", "upload", ""]
            }
          }
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-set conversation_id from user-response if available",
          "if (pm.response && pm.response.json && pm.response.json().conversation_id) {",
          "    pm.collectionVariables.set('conversation_id', pm.response.json().conversation_id);",
          "}"
        ]
      }
    }
  ]
}
